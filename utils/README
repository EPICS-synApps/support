	> #testSerialVx_OBJS_vxWorks += $(IPAC_BIN)/tyGSOctal

MODULE:		mpfGpib
VERSION:	R1-4
URL: http://www.aps.anl.gov/asd/people/mrk/epics/modules/bus/gpib/mpfGpib/index.html
BUILD DEPENDENCIES: EPICS_BASE, MPF
PROCEDURE:
- cd <suporttop>
- unzipping and untarring mpfGpib1-4.tar
- mv 1-4 mpfGpib/1-4
- chmod u+w mpfGpib/1-4/config/RELEASE
- Replace the contents of mpfGpib/1-4/gpibApp/Makefile.Vx with the following;
------- Makefile.Vx -------
PROD      = GpibHideosLocal.o
PROD     += GpibHideosRemote.o

LIBOBJS   = GpibGsTi9914.o
LIBOBJS  += Gpib.o
LIBOBJS  += gpibSniff.o
LIBOBJS  += gpibServer.o
LIBNAME   = mpfgpibserverLib

INSTALLS  = GpibGsTi9914.o
INSTALLS += Gpib.o
INSTALLS += gpibSniff.o
INSTALLS += gpibServer.o
------- Makefile.Vx -------


MODULE:		motor
