	> # $(IPAC_BIN)/tyGSOctal became $(IPAC_LIB)/libTyGSOctal.a
	> # $(IPAC_BIN)/ipacLib became $(IPAC_LIB)/libIpac.a
	> testSerial_LIBS_vxWorks += TyGSOctal Ipac
	33,34c37,38
	< testSerialVx_LDOBJS_vxWorks += $(IPAC_BIN)/ipacLib
	< testSerialVx_OBJS_vxWorks += $(IPAC_BIN)/tyGSOctal
